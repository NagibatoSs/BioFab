<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseText">
        <item name="android:fontFamily">@font/sf_protext_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>

    <style name="HeaderText" parent="BaseText">
        <item name="android:fontFamily">@font/sf_protext_bold</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="SecondaryText" parent="BaseText">
        <item name="android:lineSpacingExtra">6dp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BaseButton">
        <item name="android:fontFamily">@font/sf_protext_semibold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="backgroundTint">@null</item>
<!--        <item name="backgroundTint">@color/iconsBiruza</item>-->
    </style>
    <style name="MyDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Фон самого диалога -->
        <item name="android:windowBackground">@drawable/shape_blocks</item>

        <!-- Цвет текста заголовка -->
        <item name="titleTextStyle">@style/DialogTitleText</item>

        <!-- Цвет текста в кнопках -->
        <item name="buttonBarPositiveButtonStyle">@style/DialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButton</item>
    </style>

    <style name="DialogTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/background</item>
    </style>

</resources>